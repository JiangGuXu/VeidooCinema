<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cinema_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/cinema_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"
        android:textSize="@dimen/sp_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/film_rela"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_142"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/com_search_bg">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/film_icon"
                android:layout_width="@dimen/dp_103"
                android:layout_height="@dimen/dp_130"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_6" />

            <TextView
                android:id="@+id/film_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@+id/film_icon"
                android:textColor="@color/colorffffff"
                android:textSize="@dimen/sp_20" />
            <TextView
                android:id="@+id/film_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/film_icon"
                android:textColor="@color/colorffffff"
                android:layout_below="@+id/film_name"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/film_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/film_icon"
                android:textColor="@color/colorffffff"
                android:layout_below="@+id/film_type"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/film_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/film_icon"
                android:textColor="@color/colorffffff"
                android:layout_below="@+id/film_director"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/film_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/film_icon"
                android:textColor="@color/colorffffff"
                android:layout_below="@+id/film_time"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/film_recycler"
            android:layout_below="@+id/film_rela"/>
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/com_icon_my_default1" />
    </RelativeLayout>
</LinearLayout>