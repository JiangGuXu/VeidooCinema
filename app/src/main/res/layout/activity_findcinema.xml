<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color333333"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_35"
        android:id="@+id/film_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_18"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorb11450"
        android:layout_below="@+id/film_name"
        android:textSize="@dimen/sp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/film_yingyuan"
        android:text="选择合适的影院"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_recyclerView"
        android:layout_width="match_parent"
        android:layout_below="@+id/film_yingyuan"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/image_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@drawable/com_icon_my_default1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttom_bg"
        ></View>
</RelativeLayout>