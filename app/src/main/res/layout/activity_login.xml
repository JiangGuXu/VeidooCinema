<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:id="@+id/phone_linear"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_90"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/log_icon_phone_default"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@null"
            android:hint="手机号"
            android:textColor="@color/colorffffff"
            android:layout_marginRight="@dimen/dp_30"
            android:id="@+id/login_phone"
            android:inputType="phone"
            android:paddingLeft="@dimen/dp_10"
            android:textColorHint="@color/colorffffff"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_below="@+id/phone_linear"
        android:id="@+id/line_one"
        android:background="@color/colorffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:id="@+id/pass_linear"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/line_one"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/log_icon_lock_default"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@null"
            android:textColor="@color/colorffffff"
            android:hint="密  码"
            android:inputType="textPassword"
            android:id="@+id/login_pass"
            android:paddingLeft="@dimen/dp_10"
            android:textColorHint="@color/colorffffff"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_below="@+id/pass_linear"
        android:id="@+id/line_two"
        android:background="@color/colorffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/line_two"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center"
        android:id="@+id/check_layout"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="记住密码"
            android:textColor="@color/colorffffff"
            android:id="@+id/remember_pass"
            android:paddingLeft="@dimen/dp_8"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="自动登录"
            android:paddingLeft="@dimen/dp_8"
            android:textColor="@color/colorffffff"
            android:id="@+id/auto_login"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快速注册"
            android:id="@+id/quick_register"
            android:textColor="@color/colorffffff"
            android:gravity="right"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_330"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:id="@+id/login_btn"
        android:background="@drawable/login_btn_background"
        android:textColor="@color/colorffffff"
        android:textSize="@dimen/sp_20"
        android:text="登录"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/login_re"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_380">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_toLeftOf="@+id/text_fastlogin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/colorffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方账号快速登录"
            android:id="@+id/text_fastlogin"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_toRightOf="@+id/text_fastlogin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/colorffffff"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/log_icon_weixin_default"
        android:layout_below="@+id/login_re"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>