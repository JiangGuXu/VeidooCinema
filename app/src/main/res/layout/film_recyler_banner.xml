        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:id="@+id/film_banner_name"
            android:layout_marginLeft="@dimen/dp_10"/>
    </RelativeLayout>
