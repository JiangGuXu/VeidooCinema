<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/com_details_bg">
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/com_icon_movie_default"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/details_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="电影详情"
        android:textColor="@color/colorffffff"
        android:layout_toRightOf="@id/details_img"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/details_text"/>
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_30"
        android:src="@drawable/com_icon_collection_default"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/colorffffff"
        android:layout_marginTop="@dimen/dp_70"
        android:id="@+id/details_title"
        android:layout_centerHorizontal="true"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_360"
        android:layout_below="@id/details_title"
        android:layout_marginTop="@dimen/dp_30"
        android:id="@+id/details_img1"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_below="@+id/details_img1">
        <Button
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:text="详情"
            android:textColor="@color/colorffffff"/>
    </LinearLayout>
</RelativeLayout>