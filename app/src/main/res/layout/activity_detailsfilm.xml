<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/details_film_topBg"
    android:background="@drawable/com_details_bg">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:id="@+id/details_film_bg"/>
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/com_icon_movie_default"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/details_film_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="电影详情"
        android:textColor="@color/colorffffff"
        android:layout_toRightOf="@id/details_film_img"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/details_film_text"/>
    <ImageView
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_33"
        android:id="@+id/details_film_focus"
        android:src="@drawable/com_icon_collection_default"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_360"
        android:layout_centerInParent="true"
        android:id="@+id/details_film_img1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/colorffffff"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_above="@+id/details_film_img1"
        android:id="@+id/details_film_title"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_100">
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_32"
                android:text="详情"
                android:id="@+id/details_film_details"
                android:textSize="@dimen/sp_14"
                android:background="@drawable/details_button"
                android:textColor="@color/colorffffff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_32"
                android:text="预告"
                android:id="@+id/details_film_trailer"
                android:textSize="@dimen/sp_14"
                android:background="@drawable/details_button"
                android:textColor="@color/colorffffff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_32"
                android:text="剧照"
                android:id="@+id/details_film_still"
                android:textSize="@dimen/sp_14"
                android:background="@drawable/details_button"
                android:textColor="@color/colorffffff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_32"
                android:text="影评"
                android:id="@+id/details_film_critics"
                android:textSize="@dimen/sp_14"
                android:background="@drawable/details_button"
                android:textColor="@color/colorffffff"/>

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@drawable/com_icon_my_default1"
        android:layout_margin="@dimen/dp_20"
        android:id="@+id/details_film_return"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:text="购票"
        android:id="@+id/details_film_buy"
        android:gravity="center"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/colorffffff"
        android:layout_alignParentRight="true"
        android:background="@drawable/details_buy"
        android:layout_margin="@dimen/dp_20"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/details_film_hide">

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttom_bg"
        ></View>
</RelativeLayout>