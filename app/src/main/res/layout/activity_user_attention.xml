<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RadioGroup
        android:id="@+id/my_attention_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/my_attention_radiobutton1"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_23"
            android:background="@drawable/my_attention_radiobutton_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/user_attention_film"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_14" />


        <RadioButton
            android:id="@+id/my_attention_radiobutton2"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_32"
            android:background="@drawable/my_attention_radiobutton_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/user_attention_cinema"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_14" />

    </RadioGroup>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_attention_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_attention_radiogroup"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_24">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/my_attention_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@drawable/com_icon_my_default1" />
</RelativeLayout>