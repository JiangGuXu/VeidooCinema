<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color00000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_120"
        android:background="@drawable/details_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剧照"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color333333"
            android:id="@+id/details_still_plot"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:id="@+id/details_still_gradient1"
            android:src="@drawable/film_gradient1"
            android:layout_below="@+id/details_still_plot"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_6"/>
        <ImageView
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/com_icon_down_default"
            android:layout_alignParentRight="true"
            android:id="@+id/details_still_under"
            android:layout_marginRight="@dimen/dp_24"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_24"
            android:id="@+id/details_still_recyler"
            android:layout_below="@id/details_still_gradient1">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>